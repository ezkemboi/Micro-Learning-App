<%= erb :'template', layout: false %>
<h3 id="h3-m">Welcome to Dashboard</h3>
<div>
  <h3>Welcome to Mini Learning App</h3>
</div>
<div>
  <form method="post" action='/article'>
    Search article here: <br />
    <input type="text" name="searchtopic" placeholder="Please enter word/phrase of main article you need" required /> <br />
    <button type="submit">Submit</button>
  </form>
  <br />
  <h3><%= @title %></h3>
  <p><%= @description %></p>
  <p><%= @content %></p>
  <h5>Author: <%= @author %></h5>
  <p><b>Published on:</b> <%= @publisheddate %></p>
  <a href='<%=@url%>'>Read More</a>
</div>
